{
  "image": "mcr.microsoft.com/devcontainers/javascript-node",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-norwegian-bokmal",
        "usernamehw.errorlens"
      ]
    }
  },
  "postCreateCommand": "npm i -g browser-sync",
  "postStartCommand": "nohup ./server.sh & > server.log; tail -f server.log"
  //"postStartCommand": "nohup bash -c \"browser-sync start --server '.' --files '*.html, *.css, *.js' --port 3000 --no-ui --no-open &\" > server.log"
}
